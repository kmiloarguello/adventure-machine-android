<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <Button
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound 1"
            android:onClick="playSound"
            android:alpha=".3"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/music2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound 2"
            android:onClick="playSound"
            android:alpha=".3"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/music3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound 3"
            android:onClick="playSound"
            android:alpha=".3"
            app:layout_column="2"
            app:layout_row="0"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice 1"
            android:onClick="playSound"
            android:alpha=".3"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/drum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drums"
            android:onClick="playSound"
            android:alpha=".3"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_rowSpan="2"
            />


        <Button
            android:id="@+id/voice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice 2"
            android:onClick="playSound"
            android:alpha=".3"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_columnSpan="2"
            />

        <Button
            android:id="@+id/voice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice 3"
            android:onClick="playSound"
            android:alpha=".3"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            />


        <Button
            android:id="@+id/voice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice 4"
            android:onClick="playSound"
            android:alpha=".3"
            app:layout_column="2"
            app:layout_row="2"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            />

    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>